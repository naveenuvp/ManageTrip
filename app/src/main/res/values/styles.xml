<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StartStopButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

    <style name="StartStopButtonStyle.Text">
        <item name="android:textSize">32sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>


    <style name="StartStopTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:layout_margin">@dimen/textview_title_margin</item>
    </style>

    <style name="StartStopTextViewStyle.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/textview_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="GetDetailsButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

    <style name="GetDetailsButtonStyle.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/general_margin</item>
        <item name="android:layout_marginRight">@dimen/general_margin</item>
        <item name="android:layout_marginTop">@dimen/general_margin_small</item>
        <item name="android:layout_marginBottom">@dimen/general_margin_small</item>
    </style>

    <style name="TextViewStyle.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="ImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_margin">@dimen/general_margin</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MapViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/general_margin</item>
        <item name="android:layout_marginRight">@dimen/general_margin</item>
        <item name="android:layout_marginTop">@dimen/general_margin_small</item>
        <item name="android:layout_marginBottom">@dimen/general_margin_small</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>
